{
  "name": "syren",
  "version": "1.0.0",
  "description": "A suite to mock Discord interactions using Oceanic.JS",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "rm -rf dist/ && tsc",
    "build-docs": "typedoc",
    "lint": "eslint ./ && tsc --noEmit",
    "test": "nyc --reporter lcov ava --verbose **/*.test.ts"
  },
  "nyc": {
    "exclude": [
      "coverage/**",
      "packages/*/test/**",
      "test/**",
      "build/**",
      "dist/**",
      "test{,-*}.ts",
      "**/*{.,-}test.ts",
      "**/__tests__/**",
      "**/node_modules/**",
      "**/babel.config.js"
    ]
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/exoRift/syren.git"
  },
  "keywords": [
    "discord",
    "oceanic",
    "mock",
    "test"
  ],
  "author": "exoRift",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/exoRift/syren/issues"
  },
  "homepage": "https://github.com/exoRift/syren#readme",
  "peerDependencies": {
    "oceanic.js": "^1.7.0"
  },
  "devDependencies": {
    "@types/eslint": "^8.40.2",
    "@types/node": "^20.3.1",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "ava": "^5.3.1",
    "eslint": "^8.43.0",
    "eslint-config-standard-with-typescript": "^35.0.0",
    "nyc": "^15.1.0",
    "ts-node": "^10.9.1",
    "typedoc": "^0.24.8",
    "typescript": "^5.1.3"
  }
}
